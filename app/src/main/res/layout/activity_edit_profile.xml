<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="35dp"
    tools:context="com.kthdvs.gharkokhana.EditProfileActivity">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/newPic"
        android:src="@drawable/profileimg"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="14dp"
        android:text="Username : "
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/newName"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/username"
        android:layout_marginTop="12dp"
        android:text="Location : "
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/newLocation"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:layout_below="@+id/location"
        android:layout_marginTop="18dp"
        android:text="Contact No :"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newcontact"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:textSize="15dp"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contact"
        android:layout_alignStart="@+id/contact"
        android:layout_below="@+id/contact"
        android:layout_marginTop="16dp"
        android:text="Favourites :"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newFav1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="1."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newFav2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/fav1"
        android:layout_alignRight="@+id/fav1"
        android:layout_below="@+id/fav1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="2."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newFav3"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/fav2"
        android:layout_alignStart="@+id/fav2"
        android:layout_below="@+id/fav2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:ems="10"
        android:hint="3."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newFav4"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/fav3"
        android:layout_alignStart="@+id/fav3"
        android:layout_below="@+id/fav3"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="4."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newFav5"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/fav4"
        android:layout_alignStart="@+id/fav3"
        android:layout_below="@+id/fav4"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="5."
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/btnSave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#62BEB3"
        android:text="Save Changes!!"
        android:textSize="10dp" />


</LinearLayout>
</ScrollView>
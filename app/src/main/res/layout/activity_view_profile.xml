<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kthdvs.gharkokhana.ViewProfileActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/firstimage"
        android:id="@+id/userPic"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address"
            android:layout_below="@+id/editBtn"
            android:layout_marginTop="18dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userPic"
            android:layout_alignStart="@+id/userPic"
            android:layout_below="@+id/name"
            android:layout_marginTop="27dp"
            android:textSize="25sp" />

        <Button
            android:id="@+id/editBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/userPic"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:text="Edit your Profile" />

    </RelativeLayout>
</ScrollView>
